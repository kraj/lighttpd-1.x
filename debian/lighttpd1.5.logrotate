/var/log/lighttpd1.5/*.log {
        weekly
        missingok
	copytruncate
        rotate 12
        compress
        notifempty
        sharedscripts
        postrotate
           if [ -f /var/run/lighttpd1.5.pid ]; then \
             if [ -x /usr/sbin/invoke-rc.d ]; then \
                invoke-rc.d lighttpd1.5 reload > /dev/null 2>&1; \
             else \
                /etc/init.d/lighttpd1.5 reload > /dev/null 2>&1; \
             fi; \
           fi;
        endscript
}
